# R2 Configuration
ZIMGX_R2_ENDPOINT=https://<account_id>.r2.cloudflarestorage.com
ZIMGX_R2_ACCESS_KEY_ID=
ZIMGX_R2_SECRET_ACCESS_KEY=
ZIMGX_R2_BUCKET_ORIGINALS=originals
ZIMGX_R2_BUCKET_VARIANTS=variants

# Origin type: "r2" or "http" (default: "http")
ZIMGX_ORIGIN_TYPE=r2

# Path prefix to strip from image paths before fetching from origin.
# Useful for Cloudflare Images migration where URLs contain an account-id prefix.
# ZIMGX_ORIGIN_PATH_PREFIX=

# Server
ZIMGX_SERVER_PORT=8080
ZIMGX_SERVER_HOST=0.0.0.0

# Cache
ZIMGX_CACHE_ENABLED=true
ZIMGX_CACHE_MAX_SIZE_BYTES=536870912
